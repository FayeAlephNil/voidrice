#!/bin/bash
DIR=$HOME/Media/Pictures/Screenshots

case "$(printf "a selected area\\ncurrent window\\nfull screen\\na selected area (copy)\\ncurrent window (copy)\\nfull screen (copy)\\na selected area (upload)\\ncurrent window (upload)\\nfull screen (upload)" | $MENU -l 6 -i -p "Screenshot which area?")" in
	"a selected area") maim -s $DIR/pic-selected-"$(date '+%F=%H-%M-%S').png" ;;
	"current window") maim -i "$(xdotool getactivewindow)" $DIR/pic-window-"$(date '+%F=%H-%M-%S').png" ;;
	"full screen") maim $DIR/pic-full-"$(date '+%F=%H-%M-%S').png" ;;
	"a selected area (copy)") maim -s | xclip -selection clipboard -t image/png ;;
	"current window (copy)") maim -i "$(xdotool getactivewindow)" | xclip -selection clipboard -t image/png ;;
	"full screen (copy)") maim | xclip -selection clipboard -t image/png ;;
	"a selected area (upload)") maim -s | imgur - ;;
	"current window (upload)") maim -i "$(xdotool getactivewindow)" | imgur - ;;
	"full screen (upload)") maim | imgur - ;;
esac
